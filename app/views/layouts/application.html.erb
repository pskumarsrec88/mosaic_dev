<!DOCTYPE html>
<html>
<head>
  <title>Mosaic</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% unless user_signed_in? %>
    <%= link_to "Sign in", "/users/auth/facebook"%>
  <% else %>
    <%= link_to "Sign out", "/users/sign_out", :method => "delete"%>
  <% end %>
<%= yield %>

</body>
</html>
